#!/bin/bash

if [ -z ${LF_PATH+x} ]; 
then
    echo "ERROR: environment variable LF_PATH is not set"
    exit
fi

cd  ${LF_PATH}/org.lflang/src/lib/c/reactor-c/core/federated/RTI/ && \
    rm -r build && \
    mkdir build && \
    cd build && cmake -DCMAKE_BUILD_TYPE=DEBUG ../ && \
    make && \
    sudo make install
